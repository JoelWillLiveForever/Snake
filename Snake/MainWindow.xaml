        <Label x:Name="scoreLabel" Content="Score" Canvas.Left="511" Canvas.Top="36" FontFamily="NFS font" Width="189" FontSize="14"/>
        <Label x:Name="speedLabel" Content="Speed" Canvas.Left="511" Canvas.Top="60" RenderTransformOrigin="-0.287,-1.498" FontFamily="NFS font" Width="189" FontSize="14"/>
